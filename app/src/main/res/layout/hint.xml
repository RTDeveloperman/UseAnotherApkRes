<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/hint_iv_close"
        style="@style/hint_iv_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_hint_close" />

    <ImageView
        android:id="@+id/hint_iv_type"
        style="@style/hint_iv_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/hint_tv_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/hint_iv_close"
        android:gravity="right"
        android:padding="8dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/public_tv_text_size" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win81.bab_showtext.ShowTextActivity">

    <TextView
        android:id="@+id/matn_quran"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color3" />

    <RelativeLayout
        android:id="@+id/info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_panel"
        android:background="@color/color2">

        <ImageView
            android:id="@+id/show_text_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_share"
            android:tint="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/color2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/show_text_add_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/ic_alarm_on_black_18dp" />

            <ImageView
                android:id="@+id/show_text_full_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/ic_favorite_deactive" />

            <ImageView
                android:id="@+id/show_text_auto_scrool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/ic_audio_download" />

            <ImageView
                android:id="@+id/show_text_view_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/ic_audio_play" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/toolbar_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/color1"
        android:drawablePadding="10dp"
        android:drawableRight="@android:drawable/btn_star_big_on" />

    <LinearLayout
        android:id="@+id/sout_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/color4"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/show_text_sound_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_fehrest_address_bar_left_arrow" />

        <ImageView
            android:id="@+id/show_text_sound_repeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_fehrest_address_bar_left_arrow" />

        <ImageView
            android:id="@+id/ic_show_text_sound_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_fehrest_address_bar_left_arrow" />

        <ImageView
            android:id="@+id/ic_show_text_sound_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_share"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/show_text_sound_reader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm_on_black_18dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


</RelativeLayout>
